<h2>Add a question to this survey:</h2>
<%= form_for [@survey, @question] do |form| %>
  <%= form.label("Question Prompt:") %>
  <%= form.text_field(:prompt) %>
  <%= form.submit("Submit") %>
<% end %>
<% if @survey.questions.any? %>
  <ul>
    <% @survey.questions.each do |q| %>
      <% if q.prompt != nil %>
        <li><%= q.prompt %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
